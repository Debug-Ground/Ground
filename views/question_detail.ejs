  <link href="/assets/css/style.css" rel="stylesheet">
  <link href="/../ndetail_assets/css/style.css" rel="stylesheet">

</head>

<body>

  <% include include/header2 %>

<body>

  <main id="main" style="margin-right: 140px;">

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog" style="margin-bottom: 150px; margin-top: 50px; margin-left: 70px;">
      <div class="container">

        <div class="row">

          <div class="col-lg-12 entries">

            <article class="entry entry-single">
              <form action="/question/delete" method="post">
                    <div class="entry-img">
                        <img src="/assets/img/blog-1.jpg" alt="" class="img-fluid">
                    </div>

                    <h2 class="entry-title">
                        <a href="/blog-single.html"><%= db_data[0].qtitle %></a>
                    </h2>

                    <div class="entry-footer clearfix"></div>

                    <div class="entry-meta" style="margin-top: 15px;">
                        <ul>
                          <li class="d-flex align-items-center"><i class="icofont-user"></i> <a href="blog-single.html"><%= db_data[0].qwriter %></a></li>
                          <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <a href="blog-single.html"><time datetime="2020-01-01"><%= dayjs(db_data[0].qdate).format('YY.MM.DD') %></time></a></li>
                        </ul>
                    </div>

                    <div class="entry-content">
                        
                      <div class="entry-content">
                        <blockquote>
                        <i class="icofont-quote-left quote-left"></i>
                        <p>
                          <%- db_data[0].qcontent %>
                        </p>
                        <i class="las la-quote-right quote-right"></i>
                        <i class="icofont-quote-right quote-right"></i>
                        </blockquote>
                      </div>

                        <h3 style="margin-bottom : 24px;">관리자 코멘트 </h3>
                        <div class="qcomment">
                          <div class="mt-4 mx-5">
                            <%- db_data[0].qadmin_comment %>
                          </div>
                        </div>

                    </div>
                    <% if(db_data[0].qadmin_comment == null) { %>
                    <div class="entry-footer clearfix">
                        <div class="float-right">
                        <ul class="tags">
                            <li><button type="button" class="btn btn-outline-primary m-1" id="btnSave" 
                              onclick="location.href='/question/adminComment/<%=db_data[0].qid %>'">코멘트 작성</button>
                            </li>
                        </ul>
                        </div>
                    </div>
                    <% } %>
                </article><!-- End blog entry -->
            </div>
        </div>
        <div style="text-align: right;">
              <button type="button" class="btn btn-outline-primary m-1" id="btnSave" onclick="location.href='/question/update/<%=db_data[0].qid %>'">글 수정</button>
              <button type="submit" class="btn btn-outline-danger m-1" id="btnCancel">글 삭제</button>
              <input type="hidden" name="qidx" value="<%= db_data[0].qid %>">
              <button type="button" class="btn btn-outline-dark m-1" id="btnList" onclick="location.href='/question/1'">목록</button>
            </form>
        </div>
      </div>
    </section><!-- End Blog Section -->

  </main><!-- End #main -->
</body>

   <!-- Vendor JS Files -->
  <script src="/assets/vendor/jquery/jquery.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
