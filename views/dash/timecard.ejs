<% include ../include/dash_header %>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h2 style="color:#4B49AC; margin:25px 0 10px 0;"><i class="mdi mdi-account-check"></i>&nbsp;작업자 관리</h2>
              <p class="card-description" style="margin: 0 0 30px 20px;">
                Ground의 중요 인력을 확인해보세요!
              </p>
              <div class="table-responsive">
                <table class="table table-striped text-center">
                  <thead>
                    <tr>
                      <th class="col-md-1 text-center">
                        번호
                      </th>
                      <th class="col-md-1">
                        성함
                      </th>
                      <th class="col-md-2">
                        고용형태
                      </th>
                      <th class="col-md-2">
                        출근시간
                      </th>
                      <th class="col-md-2">
                        안전장비
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = (t_num - 1) * max_value; i < t_num * max_value; i++){ %>
                      <% var data_value=db_data[i]; if(data_value===undefined){ continue; } %>
                      <tr onclick="location.href='/dash/timecard/<%= data_value.wid %>'">  
                      <td class="py-1 text-center">
                        <%= i+1 %>
                      </td>
                      <td>
                        <%= data_value.wName %>
                      </td>
                      <td>
                        <%= data_value.wRegular %>
                      </td>
                      <td>
                        <%= data_value.wAttendanceDate %>
                      </td>
                      <td>
                        <%= data_value.wEquipment %>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <nav>
                  <ul class="pagination justify-content-center mt-5">
                    <% if(t_num == 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:none;" href="/dash/timecard/<%=Number(t_num)-1%>">">이전</a></li>
                    <% } else if (t_num > 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:block;" href="/dash/timecard/<%=Number(t_num)-1%>">이전</a></li>
                    <% } %>
                    <% for(var j = 1; j<= Math.ceil(db_data.length / max_value); j++){ %>
                      <%if(j != t_num){%>
                        <li class="page-item"><a class="page-link" style="color: black;" href="/dash/timecard/<%= j %>"><%= j %></a>
                      <%}else{%>
                        <li class="page-item"><a class="page-link" style="color: black; background-color: #c8c8c8;" href="/dash/timecard/<%= j %>"><%= j %></a>
                      <%}%>
                    <% } if(t_num == Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:none;" href="/dash/timecard/<%=Number(t_num)+1%>">다음</a></li>
                    <% } else if (t_num < Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:block;" href="/dash/timecard/<%=Number(t_num)+1%>">다음</a></li>
                    <% } %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
        
<% include ../include/dash_footer %>