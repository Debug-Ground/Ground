<% include ../include/dash_header %>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h2 style="color:#4B49AC; margin:25px 0 10px 0;"><i class="mdi mdi-account-multiple-plus"></i>&nbsp;작업자 관리</h2>
              <p class="card-description" style="margin: 0 0 30px 20px;">
                Ground의 중요 인력을 확인해보세요!
              </p>
              <div class="table-responsive pt-3">
                <table class="table table-striped table-hover text-center">
                  <thead>
                    <tr>
                      <th class="col-md-1">
                        번호
                      </th>
                      <th class="col-md-3">
                        성함
                      </th>
                      <th class="col-md-1">
                        고용 형태
                      </th>
                      <th class="col-md-1">
                        고용 날짜
                      </th>
                      <th class="col-md-1">
                        담당자
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = (m_num - 1) * max_value; i < m_num * max_value; i++){ %>
                      <% var data_value=db_data[i]; if(data_value===undefined){ continue; } %>
                      <tr onclick="location.href='/dash/manpower_detail/<%= data_value.wid %>'">  
                      <td>
                        <%= i+1 %>
                      </td>
                      <td>
                        <%= data_value.wName %>
                      </td>
                      <td>
                        <%= data_value.wRegular %>
                      </td>
                      <td>
                        <%= data_value.wDate %>
                      </td>
                      <td>
                        관리자
                      </td>
                      <% } %>
                    </tr>
                  </tbody>
                </table>
                <nav>
                  <ul class="pagination justify-content-center mt-5">
                    <% if(m_num == 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:none;" href="/dash/manpower/<%=Number(m_num)-1%>">">이전</a></li>
                    <% } else if (m_num > 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:block;" href="/dash/manpower/<%=Number(m_num)-1%>">이전</a></li>
                    <% } %>
                    <% for(var j = 1; j<= Math.ceil(db_data.length / max_value); j++){ %>
                      <%if(j != m_num){%>
                        <li class="page-item"><a class="page-link" style="color: black;" href="/dash/manpower/<%= j %>"><%= j %></a>
                      <%}else{%>
                        <li class="page-item"><a class="page-link" style="color: black; background-color: #c8c8c8;" href="/dash/manpower/<%= j %>"><%= j %></a>
                      <%}%>
                    <% } if(m_num == Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:none;" href="/dash/manpower/<%=Number(m_num)+1%>">다음</a></li>
                    <% } else if (m_num < Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:block;" href="/dash/manpower/<%=Number(m_num)+1%>">다음</a></li>
                    <% } %>
                  </ul>
                </nav>
                <button type="button" class="btn btn-primary btn-icon-text ms-2" style="float:right;" onclick="location.href='/dash/manpower_add';">
                  <i class="mdi mdi-plus"></i>
                  등록하기
                </button>
              </div>
            </div>
          </div>
        </div>
        
<% include ../include/dash_footer %>