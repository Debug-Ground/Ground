<% include ../include/dash_header %>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h2 style="color:#4B49AC; margin:25px 0 10px 0;"><i class="mdi mdi-alert"></i>&nbsp;사고 관리</h2>
              <p class="card-description" style="margin: 0 0 30px 20px;">
                Ground에서 발생한 사고를 확인해주세요.
              </p>
              <div class="table-responsive pt-3">
                <table class="table table-striped table-hover text-center">
                  <thead>
                    <tr>
                      <th class="col-md-1">
                        번호
                      </th>
                      <th class="col-md-3">
                        사고 내용
                      </th>
                      <th class="col-md-1">
                        사고 형태
                      </th>
                      <th class="col-md-1">
                        사고 날짜
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = (a_num - 1) * max_value; i < a_num * max_value; i++){ %>
                      <% var data_value=db_data[i]; if(data_value===undefined){ continue; } %>
                      <tr onclick="location.href='/dash/accident_detail/<%= data_value.aid %>'">  
                       <td>
                       <%= data_value.aid %>
                      </td>
                      <td>
                        <%= data_value.aDetail %>
                      </td>
                      <td>
                        <%= data_value.aKind %>
                      </td>
                      <td>
                        <%= data_value.aDate %>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <nav>
                  <ul class="pagination justify-content-center mt-5">
                    <% if(a_num == 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:none;" href="/dash/accident/<%=Number(a_num)-1%>">">이전</a></li>
                    <% } else if (a_num > 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:block;" href="/dash/accident/<%=Number(a_num)-1%>">이전</a></li>
                    <% } %>
                    <% for(var j = 1; j<= Math.ceil(db_data.length / max_value); j++){ %>
                      <%if(j != a_num){%>
                        <li class="page-item"><a class="page-link" style="color: black;" href="/dash/accident/<%= j %>"><%= j %></a>
                      <%}else{%>
                        <li class="page-item"><a class="page-link" style="color: black; background-color: #c8c8c8;" href="/dash/accident/<%= j %>"><%= j %></a>
                      <%}%>
                    <% } if(a_num == Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:none;" href="/dash/accident/<%=Number(a_num)+1%>">다음</a></li>
                    <% } else if (a_num < Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:block;" href="/dash/accident/<%=Number(a_num)+1%>">다음</a></li>
                    <% } %></ul>
                </nav>
                <button type="button" class="btn btn-primary btn-icon-text ms-2" style="float:right;" onclick="location.href='/dash/accident_add';">
                  <i class="mdi mdi-plus"></i>
                  등록하기
                </button>
              </div>
            </div>
          </div>
        </div>
        
<% include ../include/dash_footer %>