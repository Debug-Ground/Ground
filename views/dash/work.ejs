<% include ../include/dash_header %>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h2 style="color:#4B49AC; margin:25px 0 10px 0;"><i class="mdi mdi-houzz"></i>&nbsp;공사 작업 현황</h2>
              <p class="card-description" style="margin: 0 0 30px 20px;">
                Ground 공사 작업 현황을 확인해주세요.
              </p>
              <div class="table-responsive">
                <table class="table table-striped table-hover text-center ">
                  <thead>
                    <tr>
                      <th class="col-md-1">
                        번호
                      </th>
                      <th class="col-md-1">
                        작업명
                      </th>
                      <th class="col-md-1">
                        작업 장소
                      </th>
                      <th class="col-md-4">
                        공사 진행도
                      </th>
                      <th class="col-md-1">
                        공사 시작일
                      </th>
                      <th class="col-md-1"> 
                        공사 완료일
                      </th>
                      <th class="col-md-1">
                        관리자
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < db_data.length; i++) { %>
                    <tr>
                      <td class="py-1">
                        <%= db_data[i].wsid %>
                      </td>
                      <td>
                        <%= db_data[i].wsName %>
                      </td>
                      <td>
                        <%= db_data[i].wsLocation %>
                      </td>
                      <td>
                        <div class="progress">
                          <div class="progress-bar bg-primary" role="progressbar" style="width: <%= db_data[i].percent %>%" aria-valuenow="<%= db_data[i].percent %>" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                      </td>
                      <td>
                        <%= db_data[i].wsStartDate %>
                      </td>
                      <td>
                        <%= db_data[i].wsEndDate %>
                      </td>
                      <td>
                        <%= db_data[i].wsManager %>
                      </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
                <nav aria-label="Page navigation" style="margin: 35px 0 20px 0;">
                    <ul class="pagination justify-content-center">
                      <li class="page-item"><a class="page-link" href="#">이전</a></li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item"><a class="page-link" href="#">다음</a></li>
                    </ul>
                </nav>
                <div style="float: right; margin: 10px 0 25px 0">
                    <button type="submit" class="btn btn-inverse-primary btn-fw" style="float: right; margin: 0 20px 0 15px;" onclick="location.href='/dash/work_chart_add';">
                      <i class="mdi mdi-hospital"></i>                                                    
                        &nbsp; 등록하기
                    </button>
                  </div> 
              </div>
            </div>
          </div>
        </div>

<% include ../include/dash_footer %>
        