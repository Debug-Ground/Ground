<% include ../include/dash_header %>
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h2 style="color:#4B49AC; margin:25px 0 10px 0;"><i class="mdi mdi-account-multiple-plus"></i>&nbsp;작업자 관리</h2>
              <p class="card-description" style="margin: 0 0 30px 20px;">
                Ground의 중요 인력을 확인해보세요!
              </p>
              <div class="col-md-4 grid-margin" style="margin: 0px auto;">
                <div class="card" style="box-shadow: 2px 2px 2px 2px gray;" width="50px" height="50px">
                  <div class="card-body text-center">
                    <img src="/dash_assets/images/faces/face1.jpg" height="70%" width="70%" alt="No Image"/>
                  </div>
                </div>
             </div>
              <div class="row" style="margin: 50px 0 0 0;">
                <div class="col-md-6 grid-margin ">
                    <div class="card" style="box-shadow: 2px 2px 2px 2px gray;">
                      <div class="card-body">
                        <p style="font-weight: bold; font-size: 22px; margin: 10px 0 20px 0;"><i class="mdi mdi-star-outline" style="color: gold"></i>&nbsp;성함</p>
                        <p style="font-size: 18px; color: gray; margin: 0 0 0 15px;"><%= db_data[0].wName %></p>
                      </div>
                    </div>
                </div>
                <div class="col-md-6 grid-margin ">
                    <div class="card" style="box-shadow: 2px 2px 2px 2px gray;">
                      <div class="card-body">
                        <p style="font-weight: bold; font-size: 22px; margin: 10px 0 20px 0;"><i class="mdi mdi-star-outline" style="color: gold"></i>&nbsp;고용형태</p>
                        <p style="font-size: 18px; color: gray; margin: 0 0 0 15px;">
                          <% if (db_data[0].wMemo == null) { %> 
                            없어요
                          <% } else { %>
                            <%= db_data[0].wRegular %></p>
                          <% } %>
                      </div>
                    </div>
                </div>
              </div>
              <div class="col-md-13 grid-margin ">
                <div class="card" style="box-shadow: 2px 2px 2px 2px gray;">
                  <div class="card-body">
                    <p style="font-weight: bold; font-size: 22px; margin: 10px 0 20px 0;"><i class="mdi mdi-star-outline" style="color: gold"></i>&nbsp;인적사항</p>
                    <address style="font-size: 35px; color: gray; margin: 0 0 20px 20px;">
                        <p class="font-weight-bold">
                          E-mail
                        </p>
                        <p class="mb-4">
                          <%= db_data[0].wEmail %>
                        </p>
                        <p class="font-weight-bold">
                          전화번호
                        </p>
                        <p class="mb-4">
                          <% if (db_data[0].wMemo == null) { %> 
                            없어요
                          <% } else { %>
                            <%= db_data[0].wPhone %>
                          <% } %>
                        </p>
                        <p class="font-weight-bold">
                            주소
                        </p>
                        <p class="mb-4">
                          <% if (db_data[0].wMemo == null) { %> 
                            없어요
                          <% } else { %>
                            <%= db_data[0].wAddress %>
                          <% } %>
                        </p>
                        <p class="font-weight-bold">
                            특이사항
                        </p>
                        <p class="mb-4">
                          <% if (db_data[0].wMemo == null) { %> 
                            없어요
                          <% } else { %>
                            <%= db_data[0].wMemo %>
                          <% } %>
                        </p>
                      </address>
                  </div>
                </div>
            </div>

            </div>
          </div>
        </div>

        
<% include ../include/dash_footer %>